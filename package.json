{
  "name": "dream-shards",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx server/src/index.ts",
    "build": "vite build && esbuild server/src/index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/server/index.js",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "build:standalone:win": "node scripts/build-standalone.mjs",
    "check": "tsc && npm --prefix desktop run typecheck",
    "postinstall": "npm run bootstrap:desktop",
    "bootstrap:desktop": "node scripts/install-desktop-deps.mjs",
    "db:push": "drizzle-kit push --config server/drizzle.config.ts",
    "desktop:dev": "node scripts/ensure-desktop-deps.mjs && node scripts/run-desktop-script.mjs dev",
    "desktop:build": "node scripts/ensure-desktop-deps.mjs && node scripts/run-desktop-script.mjs package"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "lucide-react": "^0.453.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@tailwindcss/typography": "^0.5.15",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "4.17.21",
    "@types/node": "20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "pkg": "^5.8.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.1",
    "typescript": "5.9.3",
    "vite": "^5.4.19",
    "vite-plugin-glsl": "^1.3.1"
  }
}
