{
  "extends": "./tsconfig.base.json",
  "include": [
    "client/src/**/*",
    "shared/**/*",
    "server/**/*",
    "desktop/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
    "types": ["node", "vite/client"],
    "module": "ESNext",
    "moduleResolution": "bundler"
  }
}
