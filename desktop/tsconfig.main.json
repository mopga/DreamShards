{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2022",
    "lib": ["es2022"],
    "rootDir": "./src/main",
    "outDir": "./dist/main",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "types": ["node", "electron"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["./dist/main"]
}
