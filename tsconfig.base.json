{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"],
      "@shared/*": ["./shared/*"],
      "@desktop/*": ["./desktop/src/*"]
    }
  }
}
